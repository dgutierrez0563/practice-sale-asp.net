@model IEnumerable<LenguajesAvanzados.Models.Detalle>

@{
    ViewBag.Title = "Detalles-Factura";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Detalle de Factura</h1>
    </div>
</div>

<div class="panel panel-primary" style="margin-top:5px;">
    <div class="panel-heading" style="padding-top:20px;padding-bottom:20px;">
        <h2 class="panel-title text-center">Detalles de Factura</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr class="info">
                <th>
                    @Html.DisplayNameFor(model => model.Facturars.IDFactura)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Productos.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cantidad)
                </th>
                <th style="text-align:center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Facturars.IDFactura)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Productos.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cantidad)
                    </td>
                    <td style="text-align:center;">
                        <ul class="btn-group text-center">
                            <li class="btn btn-warning btn-xs">@Html.ActionLink("Edit", "Edit", new { id = item.IDDetalle })</li>
                            <li class="btn btn-info btn-xs">@Html.ActionLink("Details", "Details", new { id = item.IDDetalle })</li>
                            <li class="btn btn-danger btn-xs">@Html.ActionLink("Delete", "Delete", new { id = item.IDDetalle })</li>
                        </ul>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
