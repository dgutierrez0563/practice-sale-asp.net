@model LenguajesAvanzados.Models.Detalle

@{
    ViewBag.Title = "Create";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Crear Detalle</h1>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal panel panel-primary">
        <fieldset>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Ingrese los Datos</h3>
                </div>
            </div>
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.IDFactura, "# Factura", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 has-feedback">
                    @Html.DropDownList("IDFactura", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDFactura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IDProducto, "Nombre Producto", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 has-feedback">
                    @Html.DropDownList("IDProducto", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDProducto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10 has-feedback">
                    @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add Item" class="btn btn-success" />
                    <button type="reset" class="btn btn-default"><strong>Cancel</strong></button>
                </div>
            </div>
            <br />
            <br />
        </fieldset>
    </div>
}

<a class="btn btn-primary" style="font-size:16px;" @Html.ActionLink("Back To List", "Index")
        </a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
