@model IEnumerable<LenguajesAvanzados.MoldeDO.verDetalleFactura_Result>
@{
    ViewBag.Title = "Detalles-Factura";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Detalle de Factura</h1>
    </div>
</div>

<div class="panel panel-primary" style="margin-top:5px;">
    <div class="panel-heading" style="padding-top:20px;padding-bottom:20px;">
        <h2 class="panel-title text-center">Lista de Productos</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Nombre de Producto
                        @*@Html.DisplayNameFor(model => model.Producto)*@
                    </th>
                    <th>
                        $ Precio/U
                        @*@Html.DisplayNameFor(model => model.Precio_U)*@
                    </th>
                    <th>
                        Cantidad
                        @*@Html.DisplayNameFor(model => model.Cantidad)*@
                    </th>
                    <th>
                        $ Total/Item
                        @*@Html.DisplayNameFor(model => model.Total)*@
                    </th>
                    @*<th>Total a Pagar</th>*@
                </tr>
            </thead>
            @*<tr>
                    <th colspan="3">Total</th>
                </tr>*@
            @{ decimal totalPrecio = 0;
            }
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Producto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio_U)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Total)
                        </td>
                        <td style="display:none;">
                            @(totalPrecio = totalPrecio + Convert.ToDecimal(item.Total))
                            @*@(totalPrecio++)*@
                        </td>
                    </tr>
                </tbody>

            }
            <tfoot>
                <tr class="danger" style="border:solid">
                    <td colspan="3"><strong>$ Total a Cancelar</strong></td>
                    <td><strong>@totalPrecio</strong></td>
                </tr>
            </tfoot>
        </table>
        <br />
        <a class="btn btn-primary" style="font-size:16px;" @Html.ActionLink("Return Facturas", "Index", "Facturars")
        </a>
    </div>
</div>