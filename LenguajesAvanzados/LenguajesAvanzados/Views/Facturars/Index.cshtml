@model IEnumerable<LenguajesAvanzados.Models.Facturar>

@{
    ViewBag.Title = "Factureo";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Factureo</h1>
    </div>
</div>

<div class="panel panel-primary" style="margin-top:5px;">
    <div class="panel-heading" style="padding-top:20px;padding-bottom:20px;">
        <h2 class="panel-title text-center">Lista de Facturas</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr class="info">
                <th>
                    Nombre Cliente
                </th>
                <th>
                    Nombre Vendedor
                </th>
                <th>
                    Fecha de Venta
                </th>
                <th style="text-align:center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Clientes.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vendedors.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreado)
                    </td>
                    <td style="text-align:center;">
                        <ul class="btn-group text-center">
                            @*<li class="btn btn-warning btn-xs">@Html.ActionLink("Edit", "Edit", new { id = item.IDFactura })</li>*@
                            <li class="btn btn-xs" style="background-color:lightgreen"><strong>@Html.ActionLink("Facturar", "Create", "Detalles")</strong></li>
                            <li class="btn btn-xs" style="background-color:gold">@Html.ActionLink("Ver Factura", "verFactura", new { id = item.IDFactura })</li>
                            <li class="btn btn-xs" style="background-color:lightblue">@Html.ActionLink("Imprimir Factura", "imprimirFactura", new { id = item.IDFactura})</li>
                            @*<li class="btn btn-danger btn-xs">@Html.ActionLink("Delete", "Delete", new { id = item.IDFactura })</li>*@
                        </ul>
                    </td>
                </tr>
            }
        </table>
        <br />
        <br />
        <a class="btn btn-primary" style="font-size:16px;" @Html.ActionLink("Create New", "Create")
        </a>
    </div>
</div>
