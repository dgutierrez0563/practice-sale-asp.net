@model IEnumerable<LenguajesAvanzados.Models.Proveedor>

@{
    ViewBag.Title = "Proveedores";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Manejo de Proveedores</h1>
    </div>
</div>

<div class="panel panel-primary" style="margin-top:5px;">
    <div class="panel-heading" style="padding-top:20px;padding-bottom:20px;">
        <h2 class="panel-title text-center">Lista de Proveedores</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr class="info">
                <th>
                    Nombre de Proveedor
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Encargado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th style="text-align:center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Encargado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        <ul class="btn-group text-center">
                            <li class="btn btn-warning btn-xs">@Html.ActionLink("Edit", "Edit", new { id = item.IDProveedor })</li>
                            <li class="btn btn-info btn-xs">@Html.ActionLink("Details", "Details", new { id = item.IDProveedor })</li>
                            <li class="btn btn-danger btn-xs">@Html.ActionLink("Delete", "Delete", new { id = item.IDProveedor })</li>
                        </ul>
                    </td>
                </tr>
            }
        </table>
        <br />
        <a class="btn btn-primary" style="font-size:16px;" @Html.ActionLink("Create New", "Create")
        </a>
    </div>
</div>