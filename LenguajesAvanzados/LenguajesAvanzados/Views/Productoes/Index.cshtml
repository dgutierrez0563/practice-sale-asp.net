@model IEnumerable<LenguajesAvanzados.Models.Producto>

@{
    ViewBag.Title = "Index";
}

<div class="panel panel-info">
    <div class="panel-heading" style="padding-top:25px;padding-bottom:25px;">
        <h1 class="panel-title text-center" style="font-size:20px;">Manejo de Productos</h1>
    </div>
</div>

<div class="panel panel-primary" style="margin-top:5px;">
    <div class="panel-heading" style="padding-top:20px;padding-bottom:20px;">
        <h2 class="panel-title text-center">Lista de Productos</h2>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr class="info">
                <th>
                    Categoria
                </th>
                <th>
                    Proveedor
                </th>
                <th>
                    Nombre Producto
                </th>
                <th>
                    $ Precio/U
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaCreado)
                </th>
                <th style="text-align:center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categorias.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Proveedors.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaCreado)
                    </td>
                    <td style="text-align:center;">
                        <ul class="btn-group text-center">
                            <li class="btn btn-warning btn-xs">@Html.ActionLink("Edit", "Edit", new { id = item.IDProducto })</li>
                            <li class="btn btn-info btn-xs">@Html.ActionLink("Details", "Details", new { id = item.IDProducto })</li>
                            <li class="btn btn-danger btn-xs">@Html.ActionLink("Delete", "Delete", new { id = item.IDProducto })</li>
                        </ul>
                    </td>
                </tr>
            }
        </table>
        <br />
        <a class="btn btn-primary" style="font-size:16px;" @Html.ActionLink("Create New", "Create")
        </a>
    </div>
</div>
